<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/backlay"
            android:layout_width="@dimen/header_size"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="@drawable/ripple_effect_about">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/back_arrow_size"
                android:layout_height="@dimen/back_arrow_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/backlay"
            android:text="@string/action_settings"
            android:textColor="@color/listitem"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/shadowImg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/header"
        android:background="@drawable/bottom_shadow" />

    <RelativeLayout
        android:id="@+id/bannerAdLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/green_border"
        android:padding="2.5dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/dummy_banner_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fb_ad_hieght">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ad_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/sponsored" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="-1dp"
                android:background="@drawable/atu" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bannerAdLay"
        android:layout_below="@+id/shadowImg"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/settingMainLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/settings_logoLay_padding">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/settings_logo_size"
                    android:layout_height="@dimen/settings_logo_size"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/appTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/blackcolor"
                    android:textSize="@dimen/settings_appTxt_size" />

                <TextView
                    android:id="@+id/verTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appTxt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:text="@string/version"
                    android:textColor="@color/secondrytext"
                    android:textSize="@dimen/settings_verTxt_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/soundLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:layout_below="@+id/ignoreListLay"
                android:background="@drawable/card">

                <TextView
                    android:id="@+id/soundTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/sound"
                    android:textColor="@color/secondrytext"
                    android:textSize="@dimen/setting_row_text_size" />

                <LinearLayout
                    android:layout_width="@dimen/sound_layout_width"
                    android:layout_height="@dimen/sound_layout_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/settingborder"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/soundOnLay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/disable_border">

                        <TextView
                            android:id="@+id/soundOnTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/on"
                            android:textColor="@color/listitem"
                            android:textSize="@dimen/setting_row_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/soundOffLay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/enable_border">

                        <TextView
                            android:id="@+id/soundOffTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/off"
                            android:textColor="@color/listitem"
                            android:textSize="@dimen/setting_row_text_size" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RateUslay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:background="@drawable/card">

                <TextView
                    android:id="@+id/rateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/rateus"
                    android:textColor="@color/secondrytext"
                    android:textSize="@dimen/setting_row_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/moreappsLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:background="@drawable/card">

                <TextView
                    android:id="@+id/moreAppTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/moreapps"
                    android:textColor="@color/secondrytext"
                    android:textSize="@dimen/setting_row_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/feedbackLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_row_height"
                android:background="@drawable/card">

                <TextView
                    android:id="@+id/feedbackTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/feedback"
                    android:textColor="@color/secondrytext"
                    android:textSize="@dimen/setting_row_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nativeContainerLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/native_ad_border"
                android:padding="3dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/native_dummy_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fb_native_ad_height"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ad_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="@string/native_add_text"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-1dp"
                        android:layout_marginRight="-1dp"
                        android:background="@drawable/atu" />
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
