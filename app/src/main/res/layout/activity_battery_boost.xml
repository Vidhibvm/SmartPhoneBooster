<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lm">

        <RelativeLayout
            android:id="@+id/bannerAdLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_border"
            android:padding="2.5dp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/dummy_banner_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fb_ad_hieght">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad_left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/sponsored" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="-1dp"
                    android:background="@drawable/atu" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/plus1"
            android:layout_width="@dimen/plus_one_size"
            android:layout_height="@dimen/plus_one_size"
            android:layout_marginLeft="@dimen/plus_one_MarginLeft"
            android:layout_marginTop="@dimen/plus_one_MarginTop"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus2"
            android:layout_width="@dimen/plus_two_size"
            android:layout_height="@dimen/plus_two_size"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/plus_two_MarginTop"
            android:layout_marginRight="@dimen/plus_two_MarginRight"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus3"
            android:layout_width="@dimen/plus_three_size"
            android:layout_height="@dimen/plus_three_size"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/plus_three_MarginTop"
            android:layout_marginRight="@dimen/plus_three_MarginRight"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus4"
            android:layout_width="@dimen/plus_four_size"
            android:layout_height="@dimen/plus_four_size"
            android:layout_marginLeft="@dimen/plus_four_MarginLeft"
            android:layout_marginTop="@dimen/plus_four_MarginTop"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus5"
            android:layout_width="@dimen/plus_five_size"
            android:layout_height="@dimen/plus_five_size"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/plus_five_MarginLeft"
            android:layout_marginBottom="@dimen/plus_five_MarginBottom"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus6"
            android:layout_width="@dimen/plus_six_size"
            android:layout_height="@dimen/plus_six_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/plus_six_MarginRight"
            android:layout_marginBottom="@dimen/plus_six_MarginBottom"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus7"
            android:layout_width="@dimen/plus_sev_size"
            android:layout_height="@dimen/plus_sev_size"
            android:layout_alignLeft="@+id/plus3"
            android:layout_alignTop="@+id/plus5"
            android:layout_marginTop="@dimen/plus_sev_MarginTop"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus8"
            android:layout_width="@dimen/plus_eight_size"
            android:layout_height="@dimen/plus_eight_size"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/plus_eight_MarginLeft"
            android:layout_marginBottom="@dimen/plus_eight_MarginBottom"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/plus9"
            android:layout_width="@dimen/plus_nine_size"
            android:layout_height="@dimen/plus_nine_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/plus_nine_MarginRight"
            android:layout_marginBottom="@dimen/plus_nine_MarginBottom"
            android:background="@drawable/plus"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/sparkLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sparkLayHeight"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/waterRipple"
                android:layout_width="@dimen/waterRipple"
                android:layout_height="@dimen/waterRipple"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:alpha="0.5"
                android:background="@drawable/ripple_effect"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/batteryGlowImage0"
                android:layout_width="@dimen/batteryGlowImage"
                android:layout_height="@dimen/batteryGlowImage"
                android:layout_centerInParent="true"
                android:background="@drawable/battery_glow"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/batteryGlowImage"
                android:layout_width="@dimen/batteryGlowImage"
                android:layout_height="@dimen/batteryGlowImage"
                android:layout_centerInParent="true"
                android:background="@drawable/battery_glow"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/sparkImageLay"
                android:layout_width="@dimen/batteryGlowImage"
                android:layout_height="@dimen/batteryGlowImage"
                android:layout_centerInParent="true"
                android:background="@drawable/battery_aperture"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/sparkImage"
                    android:layout_width="@dimen/sparkImage_size"
                    android:layout_height="@dimen/sparkImage_size"
                    android:layout_centerInParent="true"
                    android:background="@drawable/boost_spark"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sparkLay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/textLayMargin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/BatteryExtendTxtLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BatteryExtendTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/listitem"
                    android:textSize="@dimen/BatteryExtendTxt"
                    android:textStyle="normal"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/BatteryExtendTxtUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/BatteryExtendTxtUnit_marginLeft"
                    android:layout_marginBottom="@dimen/BatteryExtendTxtUnit_marginBottom"
                    android:text="Min"
                    android:textColor="@color/listitem"
                    android:textSize="@dimen/BatteryExtendTxtUnit"
                    android:textStyle="normal"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/extendTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/extendTxt_MarginTop"
                android:text="@string/extended"
                android:textColor="@color/listitem"
                android:textSize="@dimen/extendTxt"
                android:textStyle="normal"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
